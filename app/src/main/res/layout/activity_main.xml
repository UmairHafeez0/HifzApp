<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/AddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ViewRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ViewRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Record"
        app:layout_constraintTop_toBottomOf="@id/AddStudent"
        app:layout_constraintBottom_toTopOf="@id/AddRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/AddRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Record"
        app:layout_constraintTop_toBottomOf="@id/ViewRecord"
        app:layout_constraintBottom_toTopOf="@id/Commit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commits"
        app:layout_constraintTop_toBottomOf="@id/AddRecord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>